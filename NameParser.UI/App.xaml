<Application x:Class="NameParser.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NameParser.UI"
             xmlns:converters="clr-namespace:NameParser.UI.Converters"
             xmlns:services="clr-namespace:NameParser.UI.Services"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:RankToVisibilityConverter x:Key="RankToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Localization Service -->
        <services:LocalizationService x:Key="Localization"/>
    </Application.Resources>
</Application>
